+AC_ARG_ENABLE(old-stdlib-cache,
+    AS_HELP_STRING([--enable-old-stdlib-cache], [enable pre-pep3147 stdlib cache]),
+[
+    if test "$enableval" = "yes"
+    then
+        STDLIB_CACHE_FLAGS="-b"
+    else
+        STDLIB_CACHE_FLAGS="" 
+    fi
+],
+[
+    STDLIB_CACHE_FLAGS="" 
+])
+AC_SUBST(STDLIB_CACHE_FLAGS)
